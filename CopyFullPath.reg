Windows Registry Editor Version 5.00

[HKEY_CLASSES_ROOT\*\shell\CopyFullPath3]
@="Copy Full Path with 2 Slashes"

[HKEY_CLASSES_ROOT\*\shell\CopyFullPath3\command]
@="cmd.exe /c set \"fp=%1\" & echo \"%%fp%%\" & (echo.|set /p=\"%fp\") | clip & pause"

[HKEY_CLASSES_ROOT\Directory\shell\CopyFullPath3]
@="Copy Full Path with 2 Slashes"

[HKEY_CLASSES_ROOT\Directory\shell\CopyFullPath3\command]
@="cmd.exe /c set \"fp=%1\" & echo \"%%fp%%\" & (echo.|set /p=\"%fp\") | clip & pause"